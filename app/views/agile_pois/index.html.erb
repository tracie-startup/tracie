<% body_class "agile_pois" %>
<h1>Listing agile_pois</h1>

<table id="pois">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created by</th>
      <th>Posted by</th>
      <th>Decay rate</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agile_pois.each do |agile_poi| %>
      <tr>
        <td><%= agile_poi.title %></td>
        <td><%= agile_poi.description %></td>
        <td><%= agile_poi.created_by %></td>
        <td><%= agile_poi.posted_by %></td>
        <td><%= agile_poi.decay_rate %></td>
        <td><%= agile_poi.latitude %></td>
        <td><%= agile_poi.longitude %></td>
        <td><%= link_to 'Show', agile_poi %></td>
        <td><%= link_to 'Edit', edit_agile_poi_path(agile_poi) %></td>
        <td><%= link_to 'Destroy', agile_poi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <div id='map'></div>
  <button id='add'>Add POI</button>
</div>
